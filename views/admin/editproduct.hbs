<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title><e-shoes></e-shoes></title>
  </head>
  <body>
      <section>
    <div class="container ">
<div class="row  "> 
  <div class="col-md-6">

    <h2 class="text-center">Edit product</h2>
    <form action="/admin/editproduct/{{id}}" method="post" enctype="multipart/form-data">
    <div>
        <label for=""> product_name</label>
      <input type="text" name="product_name" class="form-control" value="{{product.product_name}}" required> 


    </div>

    <div>
        <label for="">Category</label>
      <input type="text"  name="Category" class="form-control" value="{{product.Category}}" required> 

    </div>
      
      
      {{!-- <select name="Category" id="" class="form-controll"></select> --}}
      {{!-- {{#each categorys}}

      {{/each}} --}}

      <div>
        <label for="">Rate</label>
      <input type="text" name="Rate" class="form-control" value="{{product.Rate}}"  required> 

      </div>

      
        <div>
             <label for="">Discription</label><br>
      {{!-- <textarea name="Discription" class="form-control" id="" cols="70" rows="5"></textarea><br> --}}
      <input type="text" name="Discription" class="form-control" required value="{{product.Discription}}"> 
            
        </div>
     
     <div class="mt-2">
        <label for="">Image</label>
        <img src="/public/img/product-images/{{id}}.jpg" alt="" style="width: 100px;height: auto;" id="imgView">


      <input type="file" name="Image" class="form-control " value=""   onchange="viewImage(event)" required> 
      

     </div>

      <div>
          <button type="submit" class="btn btn-success mt-3 font-weight-bold" >Submit</button>

      </div>
    
    </form>
  </div>
</div>
</div>
   
  </section>
   

