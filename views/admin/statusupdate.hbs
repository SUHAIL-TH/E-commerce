  <body>
      <section>
    <div class="container ">
<div class="row  "> 
  <div class="col-md-6">

    <h2 class="text-center">Update status</h2>
    <form action="/admin/postorderstatus/{{id}}" method="post" enctype="multipart/form-data">
    {{#each orders}}
   
    <div class="mt-5">
        <select class="form-control" name="status" id="status" style="width: 400px; height: 40px; ">
        <option value="{{this.status}}">{{this.status}}</option>
        <option value="shipped">shipped</option>
        <option value="nearrest hub">nearrest hub</option>
        <option value="delivered">delivered</option>
        <option value="canceled">canceled</option>
      </select>


    </div>
       
      
    {{/each}}  

      <button type="submit" class="btn btn-success mt-3 font-weight-bold" >Submit</button>
    </form>
  </div>
</div>
</div>
   
  </section>
   

