  <div class="container ">

    <div class="row  ">

      <a href="/admin/addcategory" class="ml-auto btn btn-success font-weight-bold">Add category</a>

      <table class="table mt-3">

        <thead class="thead-dark">

          <tr>

            <th scope="col">No:</th>

            <th scope="col">category</th>

            {{!-- <th scope="col">Edit</th> --}}
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each categorys}}
          <tr>
            <th scope="row">1</th>

            <td>{{this.Category}}</td>
            {{!-- <td><a href="/admin/editcategory/{{this._id}}" class="btn btn-info font-weight-bold">Edit</a></td>
            --}}

            <td>

              <a href="/admin/deletecategory/{{this._id}}" class="btn btn-danger font-weight-bold"
                onclick="return confirm('DO you want to delete? {{ this.product_name}}?')">Delete</a>
            </td>

          </tr>
          {{/each}}

        </tbody>
      </table>
    </div>
  </div>


